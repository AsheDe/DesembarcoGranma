<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PackCuestionario.Cuestionario">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="32dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/respuestaA"
            android:layout_marginTop="24dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Texto de respuesta A.. arrastra"
                android:layout_gravity="center"
                />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="32dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/respuestaB"
            android:layout_below="@+id/respuestaA"
            android:layout_marginTop="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Texto de respuesta B"
                android:layout_gravity="center"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="32dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/respuestaC"
            android:layout_below="@+id/respuestaB"
            android:layout_marginTop="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Texto de respuesta C arrastrar"
                android:layout_gravity="center"
                />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="32dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/respuestaD"
            android:layout_below="@+id/respuestaC"
            android:layout_marginTop="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Texto de respuesta D arrastrar"
                android:layout_gravity="center"
                />
        </android.support.v7.widget.CardView>

</RelativeLayout>