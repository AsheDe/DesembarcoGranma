<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:minHeight="68dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="2dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="32dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:id="@+id/seleccionCard"
        android:background="@color/blanco"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto de respuesta A"
            android:layout_gravity="center"
            android:id="@+id/textrespuestaseleccion"
            android:textColor="@color/negro"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:textSize="@dimen/letras_cuestionario"
            />
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        app:layout_anchor="@id/seleccionCard"
        app:layout_anchorGravity="center_vertical|left"
        android:gravity="center"
        android:elevation="8dp"
        android:id="@+id/indicador_respuesta"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:minWidth="32dp"
        android:textSize="@dimen/letras_cuestionario"
        />
</android.support.design.widget.CoordinatorLayout>