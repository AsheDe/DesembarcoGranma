<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="wrap_content"
    android:layout_height="28dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="1dp"
       >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/acomodatextoCard"
        app:cardBackgroundColor="@color/colorPrimary"
        android:padding="4dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="__________"
            android:layout_gravity="center"
            android:id="@+id/acomodatextoText"
            android:textColor="@color/blanco"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="@dimen/letras_cuestionario"
            />
    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>